# Environment Variables Template
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=kampungtani_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database External Port
DB_EXTERNAL_PORT=5433

# Backend Configuration
FLASK_ENV=development
FLASK_DEBUG=1
API_HOST=0.0.0.0
API_PORT=5000

# Backend External Port
BACKEND_EXTERNAL_PORT=5000

# Frontend Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:5000

# Frontend External Port
FRONTEND_EXTERNAL_PORT=3002

# MQTT Configuration
MQTT_BROKER_HOST=host.docker.internal
MQTT_BROKER_PORT=1883
MQTT_TOPIC_SENSOR=sensor/ecu1051/data
MQTT_CLIENT_ID=kampungtani_listener

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production

# Application Configuration
APP_NAME=Kampung Tani IoT Monitoring
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Development Settings
HOT_RELOAD=true
DEBUG_MODE=true