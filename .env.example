# Kampung Tani IoT System - Environment Configuration Template
# Copy this file to .env and configure with your actual values
# DO NOT commit .env files to version control

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=kampungtani_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===== EXTERNAL PORTS =====
DB_EXTERNAL_PORT=5433
BACKEND_EXTERNAL_PORT=5000
FRONTEND_EXTERNAL_PORT=3002

# ===== BACKEND CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=5000

# ===== FRONTEND CONFIGURATION =====
# Frontend external port
FRONTEND_EXTERNAL_PORT=3002

# ===== MQTT CONFIGURATION =====
MQTT_BROKER_HOST=host.docker.internal
MQTT_BROKER_PORT=1883
MQTT_TOPIC_SENSOR=sensor/ecu1051/data
MQTT_CLIENT_ID=kampungtani_listener

# ===== SECURITY CONFIGURATION =====
# IMPORTANT: Change these values in production!
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production

# ===== APPLICATION SETTINGS =====
APP_NAME=Kampung Tani IoT Monitoring
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# ===== DEVELOPMENT SETTINGS =====
HOT_RELOAD=true
DEBUG_MODE=true