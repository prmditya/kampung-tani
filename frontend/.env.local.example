# Frontend Environment Configuration Template
# Copy this file to .env.local and configure with your actual values
# DO NOT commit .env.local files to version control

# ===== API CONFIGURATION =====
# Backend API URL for frontend to communicate with
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v3

# API Documentation URLs
NEXT_PUBLIC_DOCS_URL=http://localhost:5000/api/v3/docs
NEXT_PUBLIC_REDOC_URL=http://localhost:5000/api/v3/redoc

# ===== APPLICATION SETTINGS =====
# Application name displayed in the UI
NEXT_PUBLIC_APP_NAME=Kampung Tani IoT Monitoring

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===== DEVELOPMENT SETTINGS =====
# Node environment
NODE_ENV=development

# Enable hot reload for development
HOT_RELOAD=true

# ===== ANALYTICS & MONITORING =====
# Add analytics or monitoring service configurations here
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ===== FEATURE FLAGS =====
# Enable/disable features for development
NEXT_PUBLIC_DEBUG_MODE=true